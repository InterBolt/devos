FROM debian:latest
SHELL ["/bin/bash", "-c"]

# Base packages
RUN apt-get update \
  && DEBIAN_FRONTEND=noninteractive apt-get install --assume-yes --no-install-recommends \
  git \
  coreutils \
  awscli \
  ufw \
  moreutils \
  rsync \
  postgresql-client \
  lsb-release \
  ca-certificates \
  curl \
  jq \
  wget \
  openssh-server \
  sudo

RUN touch /usr/local/bin/solos \
  && chmod +x /usr/local/bin/solos

# Make logs pretty
ENV TERM=xterm-256color